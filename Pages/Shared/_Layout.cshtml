<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - KhumaloCraft Emporium</title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="site-header">
            <div class="logo">
                <img src="~/images/logo.png" alt="KhumaloCraft Emporium Logo">
                <h1>KhumaloCraft Emporium</h1>
            </div>
            <nav class="site-nav">
                <ul>
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/AboutUs">About Us</a></li>
                    <li><a asp-page="/MyWork">My Work</a></li>
                    <li><a asp-page="/ContactUs">Contact Us</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main Content -->
        <main role="main" class="content">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="site-footer">
            <div class="footer-content">
                <div class="footer-about">
                    <h3>About KhumaloCraft</h3>
                    <p>KhumaloCraft Emporium connects artisans worldwide with a discerning audience, offering unique and beautiful handcrafted products.</p>
                </div>
                <div class="footer-nav">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a asp-page="/Index">Home</a></li>
                        <li><a asp-page="/AboutUs">About Us</a></li>
                        <li><a asp-page="/MyWork">My Work</a></li>
                        <li><a asp-page="/ContactUs">Contact Us</a></li>
                    </ul>
                </div>
                <div class="footer-contact">
                    <h3>Contact Us</h3>
                    <p>Email: info@khumalocraftemporium.com</p>
                    <p>Phone: +27-82-608-9881</p>
                    <p>Address: 26 Argile rd, Durban, 4068 </p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 KhumaloCraft Emporium. All rights reserved.</p>
            </div>
        </footer>
    </div>
</body>
</html>
